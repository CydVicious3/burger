<div class="container">
<div class="row">
<form class="col s11">
<div class="col s8 input-field">
  <input type="text" class="validate" name="burger" id="burger">
  <label for="burger">Burger</label>
</div>
<div class="col s1 input-field">
<button id="addBurger" class="btn-large btn-floating waves-effect waves-light green">
  <i class="material-icons">
    add
  </i>
</button>
</div>
</form>
</div>
<div class="row">
  <div id="unDevoured" class="col s4"> 
    <h5 class="center-align">Undevoured Burger</h5>
  {{#each burger}}
  {{#unless devoured}}
  <div class="row card-panel">
    <p class="center-align"><b>{{name}}</b> </p>
    <p class="center-align">
      <button data-burger ="{{id}}" class="btn-floating waves-effect waves-light blue eatBurger">
        <i class="material-icons">local dining</i>
      </button>
    </p>
  </div>
  {{/unless}}
  {{/each}}
  </div>
  <div class="col s4"></div>
  <div id="devoured" class="col s4"> 
    <h5 class="center-align">Devoured Burger</h5>
    {{#each burger}}
    {{#if devoured}}
    <div class="row card-panel">
      <p class="center-align"><b>{{name}}</b></p>
      <p class="center-align">
        <button data-burger ="{{id}}" class="btn-floating waves-effect waves-light red removeBurger">
          <i class="material-icons">delete</i>
        </button>
      </p>
    </div>
    {{/if}}
    {{/each}}
  </div>

</div>
</div>

</div>

